<!ELEMENT procwatch (watch)+>
<!ATTLIST procwatch
  version CDATA     "1.0"
>

<!ELEMENT watch     (pattern, condition, execute+)>
<!ATTLIST watch
  name    CDATA     #REQUIRED
>

<!ELEMENT pattern   (#PCDATA)>
<!ATTLIST pattern
  match   CDATA     #REQUIRED
>

<!ELEMENT condition (max|min|sum|is|isnot)*>
<!ATTLIST condition
  type    CDATA     #REQUIRED
  attr    CDATA     #IMPLIED
>

<!ELEMENT execute   (#PCDATA)>
<!ATTLIST execute
  type    CDATA     #REQUIRED
>

<!ELEMENT max       (#PCDATA)>
<!ELEMENT min       (#PCDATA)>
<!ELEMENT sum       (#PCDATA)>
<!ELEMENT is        (#PCDATA)>
<!ELEMENT isnot     (#PCDATA)>

<!ENTITY lt     "&#60;">
<!ENTITY gt     "&#62;">
<!ENTITY amp    "&#38;">
<!ENTITY quot   "&#34;">

